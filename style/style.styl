@import url('https://fonts.googleapis.com/css2?family=Karla:wght@400;700&display=swap');
Cyan=hsl(179, 62%, 43%)
LightCyan=hsl(179, 50%, 50%)
BrightYellow=hsl(71, 73%, 54%)
LightGray=hsl(204, 43%, 93%)
GrayishBlue=hsl(218, 22%, 67%)
*
  box-sizing border-box
html
  background-color LightGray
  min-height 100vh
  font-size 16px
  padding 4.7rem 1.8rem
  body
    color white
    padding 0
    margin 0
    font-family 'Karla', sans-serif
    .main
      border-radius: .4rem
      box-shadow 0rem 0.5rem 1rem 0.05rem GrayishBlue
      >div
        padding 1.6rem
      .top
        border-radius: .4rem .4rem 0 0
        background-color white
        h3
          font-size 1.2rem
          margin-top 0
          color Cyan
        h4
          color BrightYellow
          font-size 0.9rem
        p
          font-size 0.85rem
          line-height 1.6rem
          color GrayishBlue
      .left
        background-color Cyan
        h3
          margin-top 0
        .price
          display flex
          align-items center
          h1  
            margin 0
          p
            margin 0 0 0 0.8rem
            color rgba(255,255,255,.6)
        p
          margin-top 0.5rem
        button
          margin-top 0.7rem
          background-color BrightYellow
          border none
          width 100%
          padding 1rem 0
          border-radius .3rem
          color white
          font-family 'Karla', sans-serif
          font-size 0.9rem
          font-weight 700
          box-shadow 0rem 0.5rem 1rem 0.05rem hsl(179, 62%, 35%)
          transition: .5s
          &:hover
            background-color hsl(71, 73%, 39%)
            cursor pointer
      .right
        border-radius: 0 0 .4rem .4rem
        background-color LightCyan
        h3
          margin-top 0
        p
          font-size 0.9rem
          color rgba(255,255,255,.8)
          line-height 1.2rem
          margin-bottom 0
@media screen and (min-width:768px)
  html
    padding 0 1.8rem
    display flex
    justify-content center
    align-items center
    body
      .main
        max-width 40.5rem
        display grid
        grid-template auto auto / 1fr 1fr
        >div
          padding 2.6rem
        .top
          border-radius: .4rem .4rem 0 0
          grid-area 1 / 1 / 2 / 3
          h3
            font-size 1.4rem
          h4
            font-size 1.1rem
            margin-bottom 1rem
          p
            font-size 0.98rem
            margin 0
        .left
          border-radius: 0 0 0 .4rem
        .right
          border-radius: 0 0 .4rem 0